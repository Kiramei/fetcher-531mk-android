<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="68dp">

    </androidx.viewpager2.widget.ViewPager2>

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="12dp"
        app:bnc_mode="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#0D7AB5"
            app:bt_colorInactive="#1c1c1c"
            app:bt_icon="@drawable/ic_home_1"
            app:bt_padding="10dp"
            app:bt_title="Home"
            app:bt_titlePadding="5dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#0D7AB5"
            app:bt_colorInactive="#1C1C1C"
            app:bt_icon="@drawable/ic_sites"
            app:bt_padding="10dp"
            app:bt_title="Category"
            app:bt_titlePadding="5dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#0D7AB5"
            app:bt_colorInactive="#1C1C1C"
            app:bt_icon="@drawable/ic_viewer"
            app:bt_padding="10dp"
            app:bt_title="Explore"
            app:bt_titlePadding="5dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#0D7AB5"
            app:bt_colorInactive="#1C1C1C"
            app:bt_icon="@drawable/ic_fav"
            app:bt_padding="10dp"
            app:bt_title="Likes"
            app:bt_titlePadding="5dp" />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#0D7AB5"
            app:bt_colorInactive="#1C1C1C"
            app:bt_icon="@drawable/ic_setting"
            app:bt_padding="10dp"
            app:bt_title="Setting"
            app:bt_titlePadding="5dp" />
    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

</androidx.constraintlayout.widget.ConstraintLayout>